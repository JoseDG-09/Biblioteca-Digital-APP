<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:background="@color/Primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/Primary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/Primary"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BIBLIOTECA JUVENIL"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                tools:ignore="HardcodedText" />

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="155dp"
                android:backgroundTint="@color/Primary"
                android:drawableBottom="@drawable/menu"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:src="@drawable/academia"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btnGoogleSchool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Libros, tesis y articulos verificados"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:src="@drawable/mapa"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btnPaises"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colecciones de algunos paises"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:src="@drawable/temas"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btnTemas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colecciones tematicas"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:src="@drawable/ingles"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btnIng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colecciones en ingles"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:src="@drawable/todos"
                    android:layout_marginTop="20dp"/>

                <Button
                    android:id="@+id/btnTodas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Todas las colecciones"/>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>